{
  "name": "efm32wg-stk-gcc",
  "version": "0.2.0",
  "description": "Official mbed build target for the STK3800 Starter Kit for EFM32WG, using the GCC toolchain.",
  "license": "Apache-2.0",
  "inherits": {
    "efm32wg-gcc": "^1.0.0"
  },
  "keywords": [
    "mbed-target:efm32wg-stk",
    "mbed-target:efm32wg_stk3800",
    "mbed-official",
    "efm32wg-stk"
  ],
  "similarTo": [
    "efm32wg-stk"
  ],
  "config": {
    "hardware": {
      "device": "EFM32WG990F256",
      "flash-size": 256,
      "ram-size": 32,
      "clock": {
        "core": {
          "source": "HFXO",
          "frequency": 48000000
        },
        "low-energy": {
          "source": "LFXO",
          "frequency": 32768
        }
      },
      "pins": {
        "LED0": "PE2",
        "LED1": "PE3",
        "LED2": "LED0",
        "LED3": "LED0",
        "LED4": "LED1",
        "SW0": "PB9",
        "SW1": "PB10",
        "BTN0": "SW0",
        "BTN1": "SW1",
        "UART_TX": "PD0",
        "UART_RX": "PD1",
        "SERIAL_TX": "PD0",
        "SERIAL_RX": "PD1",
        "STDIO_UART_TX": "PE0",
        "STDIO_UART_RX": "PE1",
        "USBTX": "PE0",
        "USBRX": "PE1",
        "EFM_BC_EN": "PF7",
        "SLIDER_PAD_0": "PC8",
        "SLIDER_PAD_1": "PC9",
        "SLIDER_PAD_2": "PC10",
        "SLIDER_PAD_3": "PC11"
      },
      "test-pins": {
        "spi": {
          "MOSI": "PD0",
          "MISO": "PD1",
          "SCLK": "PD2",
          "SSEL": "PD3"
        },
        "i2c": {
          "SDA": "PC4",
          "SCL": "PC5"
        }
      },
      "capsense": {
        "channels-in-use": 4,
        "sensitivity": 90
      }
    },
    "modules": {
      "serial": {
        "stdio-uart": "UART0"
      }
    }
  },
  "scripts": {
    "debug": [
      "valinor",
      "-t",
      "uvision",
      "--target",
      "efm32wg-stk",
      "$program"
    ],
    "test": [
      "mbed_test_wrapper",
      "--target",
      "EFM32WG_STK3800",
      "$program"
    ]
  }
}
